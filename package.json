{
  "name": "collaborative-whiteboard",
  "private": true,
  "version": "1.0.0",
  "description": "A real-time collaborative whiteboard application",
  "scripts": {
    "install:all": "cd client && npm install && cd ../server && npm install",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "dev:all": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "build": "cd client && npm run build",
    "start": "cd server && npm start"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "whiteboard",
    "collaboration",
    "real-time",
    "socket.io",
    "react",
    "nodejs"
  ],
  "author": "",
  "license": "MIT"
}